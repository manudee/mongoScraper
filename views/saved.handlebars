<div class='container'>

	<div class='jumbotron text-center'>
		Welcome to web scraping
	</div>



	<div class="row">
		<div id="article">



			{{#each articlesAfterSave}}
			{{#if this.saved}}
			<div class='row'>
				<div class='articles'>
					<a  href="{{this.link}}">{{this.title}}</a>
					<button type="button" data-id= {{this._id}} class="btn btn-success delete">DELETE FROM SAVED</button>	
					{{!-- 		<button type="button" data-id= {{this._id}} class="btn btn-success notes">ARTICLE NOTES</button>	 --}}
					<button type="button"  class="btn btn-success notes" data-id= {{this._id}} data-val="user1" data-toggle="modal" data-target="#{{this._id}}">ARTICLE NOTES</button>
				</div>
			</div>

			<!-- Login modal start here-->

			<div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="my-modal" aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Article Notes for: {{this._id}}</h5>

						</div>
						<div class="modal-body text-center">
							<div class="row">
								{{#if this.note.body}}
									<div class='panel'>{{this.note.body}}
										<button class="btn btn-danger btn-sm" id="deleteNote" data-id={{this.note._id}}>&times</button>

									</div>
								{{/if}}
							</div>
							<textarea type="text" class='text-center notesText' name="note" rows=5 columns=80 placeholder="notes" id="note{{this._id}}"></textarea> 
						</div>
						<div class="modal-footer">
							<button type="submit" class="btn btn-warning " data-id={{this._id}} data-dismiss="modal" aria-label="Close" >
								<span aria-hidden="true">CLOSE</span>
							</button>

							<button type="submit" class="btn btn-success " data-id={{this._id}} id="savenote" data-dismiss="modal" aria-label="Close" >
								<span aria-hidden="true">SAVE NOTE</span>
							</button>
						</div>
					</div>
				</div>
			</div>


			{{/if}}
			{{/each}}




		</div>
	</div>
</div>